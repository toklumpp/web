<?xml version="1.0"?>
<clientConfig version="1.1">
    <emailProvider id="toklumpp.net">
      <domain>toklumpp.net</domain>
        <displayName>Tobias Klumpp</displayName>
        <displayShortName>T. Klumpp</displayShortName>
        <incomingServer type="imap">
            <hostname>exchange2019.ionos.eu</hostname>
            <port>993</port>
            <socketType>SSL</socketType>
            <username>%EMAILADDRESS%</username>
            <authentication>password-cleartext</authentication>
        </incomingServer>
        <incomingServer type="pop3">
            <hostname>exchange2019.ionos.eu</hostname>
            <port>995</port>
            <socketType>SSL</socketType>
            <username>%EMAILADDRESS%</username>
            <authentication>password-cleartext</authentication>
        </incomingServer>
        <outgoingServer type="smtp">
            <hostname>smtp.exchange2019.ionos.eu</hostname>
            <port>587</port>
            <socketType>STARTTLS</socketType>
            <username>%EMAILADDRESS%</username>
            <authentication>password-cleartext</authentication>
        </outgoingServer>
    </emailProvider>
    <webMail>
        <loginPage url="https://exchange2019.ionos.de" />
        <loginPageInfo url="https://exchange2019.ionos.de">
            <username>%EMAILADDRESS%</username>
            <usernameField id="username" name="username" />
            <passwordField id="password" name="password" />
        <!-- The submit button to trigger the server submit
             after filling in the fields.
             id and name attributes: See <usernameField> -->
            <loginButton id="submit_button" name="login"/>
        </loginPageInfo>
    </webMail>
</clientConfig>
